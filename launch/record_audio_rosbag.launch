<launch>
  <!-- USAGE -->
  <!-- roslaunch decopin_hand record_rosbag.launch filename:=$HOME/.ros/rosbag/hoge.bag -->
  <arg name="filename" />

  <node name="rosbag_record"
        pkg="rosbag" type="record"
        args="-O $(arg filename)
              -b 0
              /audio
              /speech_audio
              /vibration
              /gesture
              "
        output="screen">
  </node>

</launch>
