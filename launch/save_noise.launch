<launch>

  <arg name="use_rosbag" default="false" />
  <arg name="filename" default="" />

  <include file="$(find decopin_hand)/launch/audio_to_spectrogram.launch" >
    <arg name="use_rosbag" value="$(arg use_rosbag)" />
    <arg name="filename" value="$(arg filename)" />
    <arg name="save_noise" value="true" />
  </include>

  <!-- Collect noise spectrogram -->
  <node pkg="decopin_hand" type="noise_saver.py" name="noise_saver" output="screen">
    <remap from="~raw_spectrogram" to="/spectrum_to_spectrogram/spectrogram" />
    <rosparam subst_value="true">
      save_data_rate: 1 <!-- related to spectrogram_period -->
    </rosparam>
  </node>

</launch>
